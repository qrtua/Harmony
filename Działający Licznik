import pygame
import sys
from pygame.locals import *

pygame.init()

screen = pygame.display.set_mode((400, 400))
button_width = 60
button_height = 40
clickme = pygame.Surface((button_width, button_height))
clickme.fill((10, 100, 20))
button_x = 170
button_y = 180
screen.blit(clickme, (button_x, button_y))
detecto = pygame.Rect(clickme.get_rect())
typingface = pygame.font.Font('Adca.ttf', 23)

pygame.display.flip()

contador = 0
while True:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            sys.exit()
        elif event.type == MOUSEBUTTONDOWN:
            x, y = event.pos
            if button_x < x < button_x + button_width and button_y < y < button_y + button_height:
                contador = contador + 1
                typedface = typingface.render(str(contador), True, (0, 150, 0), (0, 0, 0))
                typingrect = typedface.get_rect()
                typingrect.center = (50, 30)
                screen.blit(typedface, typingrect)
                pygame.display.update()
