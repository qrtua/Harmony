import pygame
import sys
from pygame.locals import *

#Przykładowy przycisk wyjścia, z przykładowymi wymiarami i nazwami. Na jego podstawie można też znakomicie robić inne przyciski.

pygame.init()

screen = pygame.display.set_mode((400, 400))
button_width = 60
button_height = 40
clickme = pygame.Surface((button_width, button_height))
clickme.fill((10, 100, 20))
button_x = 170
button_y = 180
screen.blit(clickme, (button_x, button_y))

pygame.display.flip()

while True:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            sys.exit()
        elif event.type == MOUSEBUTTONDOWN:
            x, y = event.pos
            if button_x < x < button_x + button_width and button_y < y < button_y + button_height:
                sys.exit()
